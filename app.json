{
  "expo": {
    "name": "PakChat",
    "slug": "PakChat",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/design/logo-color.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/design/logo-no-background.png",
      "resizeMode": "contain",
      "backgroundColor": "#C6E57D"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "softwareKeyboardLayoutMode": "pan",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
